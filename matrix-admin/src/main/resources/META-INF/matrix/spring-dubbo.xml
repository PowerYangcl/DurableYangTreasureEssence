<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans        
    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
    http://code.alibabatech.com/schema/dubbo
    http://code.alibabatech.com/schema/dubbo/dubbo.xsd">


	<!-- 提供方应用信息，用于计算依赖关系 -->
   <dubbo:application name="${dubbo.application.name}" owner="${dubbo.application.owner}">
        <dubbo:parameter key="qos.enable" value="false"/>
    </dubbo:application>

	<!-- 使用Zookeeper注册中心暴露服务地址 -->
   <dubbo:registry protocol="zookeeper" address="${dubbo.registry.address}" client="curator" />
	
	<dubbo:protocol name="dubbo" port="${dubbo.protocol.port}"/>
	
	    <dubbo:provider delay="300"
                    timeout="10000"
                    executes="30"
                    actives="10"
                    loadbalance="roundrobin"
                    cluster="failover"
                    retries="0"/>
                    
  

	<!-- 作为消费者引入dubbo-2.6.0中提供的服务 -->
    <dubbo:reference id="registryService" interface="com.alibaba.dubbo.registry.RegistryService" />

     <!-- 系统间消息路由服务|Yangcl 2018-11-20 -->
    <dubbo:service ref="matrixRouteRpcService" version="1.0.0" interface="com.matrix.rpc.IMatrixRouteRpcService"/>  
    <bean id="matrixRouteRpcService" class="com.matrix.rpcimpl.MatrixRouteRpcServiceImpl"/>
</beans>           





 

































